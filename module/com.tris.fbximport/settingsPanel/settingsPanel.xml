
<moduleSettingPanel>
    <scrollContainer  >
        <window >
            <boxLayout direction="vertical" spacing="0" >
                <collapseContainer  text="General" collapsed="false" hSizePolicy="expanding" vSizePolicy="fixed" frameStyle="noFrame">
                    <boxLayout direction="vertical" spacing="5"  marginLeft="20" marginTop="5" marginRight="10" marginBottom="15" >
                        <instantiate id="optionCheck"       template="PropertyControlCheckBox"      library="com.shiva.editor.common.lib" />
                        <instantiate id="optionNumber"      template="PropertyControlNumberBox"     library="com.shiva.editor.common.lib" />
                        <instantiate id="optionText"        template="PropertyControlEditBox"       library="com.shiva.editor.common.lib" />
                        <boxLayoutItem type="stretch" />
                    </boxLayout>
                </collapseContainer>
                <window vSizePolicy="expanding" hSizePolicy="expanding" />
            </boxLayout>
        </window>
    </scrollContainer>

    <!-- INCLUDE -->
    <include file="settingsPanel.lua"/>

    <!-- CONNECT -->
    <connect event="kEventSettingPanelNotifyShow" handler="onSettingPanelShow" />

    <connect sender="optionCheck"  event="kEventCheckBoxStateChanged"       handler="onOptionCheckChanged"  />
    <connect sender="optionNumber" event="kEventNumberBoxValueChanged"      handler="onOptionNumberChanged" />
    <connect sender="optionText"   event="kEventEditBoxEditingFinished"     handler="onOptionTextChanged"   />

</moduleSettingPanel>
